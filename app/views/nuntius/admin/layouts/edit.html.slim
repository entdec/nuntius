= ui_form_for(@layout, url: @layout.new_record? ? admin_layouts_path : admin_layout_path, html: {multipart: true}) do |f|
  = f.input :name
  = f.input :data, as: :code_mirror, input_html: { data: { lang: 'text/html', height: '400px' } }
  = f.input :metadata, as: :code_mirror, input_html: { value: YAML.dump(f.object.metadata), data: { lang: 'application/yaml', height: '80px' } }
